<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.reports.ReportQueryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_large"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextLarge"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="Select report type" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_report_type"
            android:layout_marginTop="@dimen/padding_large"
            android:layout_width="match_parent"
            android:background="@drawable/background_border_grey"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_year"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_year"
            android:inputType="number"
            android:digits="0123456789"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/et_month"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_month"
            android:inputType="number"
            android:digits="0123456789"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/btn_generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:enabled="false"
            android:text="Generate report" />

    </LinearLayout>

</ScrollView>