<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.reports.ReportQueryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextLarge"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Report Query" />

        <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:gravity="center"
            android:text="Select report type" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_report_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:background="@drawable/background_border_grey" />

        <LinearLayout
            android:id="@+id/ll_select_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:gravity="center"
                android:text="Select an Employee" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:background="@drawable/background_border_grey" />

        </LinearLayout>

        <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:gravity="center"
            android:text="Set year" />

        <EditText
            android:id="@+id/et_year"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:inputType="number"
            android:text="@string/txt_year"
            tools:ignore="Autofill" />

        <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:gravity="center"
            android:text="Set month" />

        <EditText
            android:id="@+id/et_month"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:inputType="number"
            android:text="@string/txt_month"
            tools:ignore="Autofill" />

        <ke.co.shambapay.ui.widget.LoadingWidget
            android:id="@+id/widget_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:enabled="false"
            android:text="Generate report" />

    </LinearLayout>

</ScrollView>