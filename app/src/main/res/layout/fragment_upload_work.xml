<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.upload.UploadWorkFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <TextView
                android:id="@+id/txt_title"
                style="@style/TextLarge"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="@string/txt_upload_work" />

            <EditText
                android:id="@+id/et_year"
                style="@style/EditText"
                android:hint="@string/txt_year"
                android:inputType="number"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/et_month"
                style="@style/EditText"
                android:hint="@string/txt_month"
                android:inputType="number"
                tools:ignore="Autofill" />

            <Button
                android:id="@+id/btn_select_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_large"
                android:enabled="true"
                android:text="@string/txt_select_file" />


            <TextView
                android:id="@+id/txt_message"
                style="@style/TextNormalBold"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_large"
                android:gravity="center" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_large"
                android:enabled="false"
                android:text="@string/txt_upload" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>