<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.upload.UploadEmployeesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/page_guide_line"
        android:layout_marginEnd="@dimen/page_guide_line">

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextLarge"
            android:layout_width="match_parent"
            android:text="@string/txt_upload_employees" />

        <TextView
            style="@style/TextNormalBold"
            android:layout_width="wrap_content"
            android:textColor="@color/warning"
            android:text="@string/warning_upload_employees" />

        <Button
            android:id="@+id/btn_select_file"
            style="@style/Button"
            android:text="@string/txt_select_file" />

        <Button
            android:id="@+id/btn_upload"
            style="@style/Button"
            android:enabled="false"
            android:text="@string/txt_upload" />

        <Button
            android:id="@+id/btn_back"
            style="@style/Button"
            android:text="@string/txt_back" />

        <ke.co.shambapay.ui.widget.LoadingWidget
            android:id="@+id/widget_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/TextNormalBold"
            android:layout_width="wrap_content"
            android:text="@string/rules_upload_employees" />

    </LinearLayout>

</ScrollView>