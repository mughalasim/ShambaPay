<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent" />

    <stroke
        android:width="@dimen/line_thickness"
        android:color="@color/green_dark" />

    <padding
        android:bottom="@dimen/line_thickness"
        android:left="@dimen/line_thickness"
        android:right="@dimen/line_thickness"
        android:top="@dimen/line_thickness" />

    <corners
        android:bottomLeftRadius="@dimen/border_corner_radius"
        android:bottomRightRadius="@dimen/border_corner_radius"
        android:topLeftRadius="@dimen/border_corner_radius"
        android:topRightRadius="@dimen/border_corner_radius" />
</shape>